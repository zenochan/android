<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="@dimen/actionbar_size"
  android:orientation="vertical"
  >

  <cn.izeno.android.widget.ZTextView
    android:id="@+id/tv_pre"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:drawableLeft="@mipmap/ic_arrow_left"
    android:gravity="center_vertical"
    android:minWidth="@dimen/z.normal"
    android:paddingLeft="15dp"
    android:paddingRight="8dp"
    android:textSize="@dimen/md.textButton"
    android:visibility="gone"
    app:compoundDrawableTint="@color/z.white"
    app:drawableTint="@color/z.white"
    />

  <TextView
    android:id="@+id/tv_title"
    style="@style/layout.fullWidth"
    android:layout_centerInParent="true"
    android:layout_marginLeft="56dp"
    android:layout_marginRight="56dp"
    android:ellipsize="end"
    android:gravity="center"
    android:singleLine="true"
    android:text="title"
    android:textColor="@color/z.white"
    android:textSize="@dimen/md.textTitle"
    />

  <cn.izeno.android.widget.ZTextView
    android:id="@+id/tv_action"
    style="@style/layout.fullHeight"
    android:layout_alignParentRight="true"
    android:layout_marginRight="8dp"
    android:gravity="center_vertical|right"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:textSize="@dimen/md.textButton"
    android:visibility="visible"
    />


</RelativeLayout>