<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="zeno"/>

  <style name="layout">
    <item name="android:orientation">vertical</item>
  </style>

  <style name="layout.full">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:orientation">vertical</item>
  </style>

  <style name="layout.wrap">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">vertical</item>
  </style>

  <style name="layout.fullWidth">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">vertical</item>
  </style>

  <style name="layout.fullWidth.H">
    <item name="android:orientation">horizontal</item>
  </style>

  <style name="layout.fullHeight">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">match_parent</item>
  </style>

  <style name="layout.autoHeight">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">0dp</item>
    <item name="android:layout_weight">1</item>
  </style>

  <style name="layout.autoWidth">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_weight">1</item>
  </style>

  <style name="layout.anchor">
    <item name="android:layout_width">1px</item>
    <item name="android:layout_height">1px</item>
    <item name="android:layout_centerInParent">true</item>
  </style>

  <style name="button"/>

  <style name="button.default">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/z_button_txt</item>
    <item name="android:background">@drawable/z_button</item>
    <item name="android:layout_marginTop">4dp</item>
    <item name="android:layout_marginBottom">4dp</item>
    <item name="android:layout_marginLeft">16dp</item>
    <item name="android:layout_marginRight">16dp</item>
  </style>

  <style name="center_anchor">
    <item name="android:layout_centerInParent">true</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:layout_width">1dp</item>
  </style>


  <style name="button.main" parent="layout.fullWidth">
    <item name="android:textColor">@color/z.white</item>
    <item name="android:textSize">@dimen/md.textButton</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_marginRight">56dp</item>
    <item name="android:layout_marginLeft">56dp</item>
    <item name="android:paddingTop">4dp</item>
    <item name="android:paddingBottom">4dp</item>
    <item name="android:background">?attr/colorPrimary</item>
  </style>

  <style name="button.main.small">
    <item name="android:layout_height">32dp</item>
    <item name="android:layout_width">88dp</item>
  </style>

  <style name="divider" parent="layout.full">
    <item name="android:layout_marginLeft">16dp</item>
    <item name="android:layout_height">1px</item>
    <item name="android:background">@color/md.grey300</item>
  </style>

  <style name="divider.v">
    <item name="android:layout_marginLeft">0dp</item>
    <item name="android:layout_marginTop">16dp</item>
    <item name="android:layout_marginBottom">16dp</item>
    <item name="android:layout_width">1px</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:background">@color/md.grey300</item>
  </style>

  <style name="divider.middle">
    <item name="android:layout_marginRight">16dp</item>
  </style>

  <style name="zText">
  </style>

  <style name="zText.singleLine" parent="layout.fullWidth">
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:textSize">@dimen/md.textBody</item>
    <item name="android:layout_marginTop">0.5dp</item>
    <item name="android:layout_marginBottom">0.5dp</item>
    <item name="android:background">@color/z.white</item>
    <item name="android:layout_height">40dp</item>
    <item name="android:textColor">@color/z.black_a87</item>
  </style>

  <style name="zText.content" parent="layout.wrap">
    <item name="android:textColor">@color/md.grey600</item>
    <item name="android:textSize">@dimen/md.textBody</item>
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingBottom">8dp</item>
  </style>

  <style name="zText.caption" parent="layout.wrap">
    <item name="android:textColor">@color/md.grey400</item>
    <item name="android:textSize">@dimen/md.textCaption</item>
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingBottom">8dp</item>
  </style>

  <style name="zeno.view"/>

  <style name="zeno.view.badge">
    <item name="android:layout_width">8dp</item>
    <item name="android:layout_height">8dp</item>
    <item name="android:background">@drawable/bg_badge</item>
  </style>

</resources>