<manifest
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  package="name.zeno.android.util"
  >
  <!-- 应用自升级，Android O 需要此权限才可以安装-->
  <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES"/>


  <!-- 默认需要网络权限-->
  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

  <uses-feature android:name="android.hardware.camera"/>
  <uses-feature android:name="android.hardware.camera.autofocus"/>

  <application>
    <activity
      android:name="name.zeno.android.app.CrashLogActivity"
      android:launchMode="singleTask"
      android:screenOrientation="portrait"
      />

    <activity
      android:name="name.zeno.android.presenter.bigbang.BigBangActivity"
      android:screenOrientation="portrait"
      />

    <activity
      android:name="name.zeno.android.presenter.activities.UpdateActivity"
      android:theme="@style/DefaultTheme.Transparent"
      />

    <activity
      android:name="name.zeno.android.presenter.input.InputActivity"
      android:launchMode="singleTop"
      android:screenOrientation="portrait"
      />
    <activity
      android:name="name.zeno.android.presenter.activities.ClipActivity"
      android:launchMode="singleTop"
      android:screenOrientation="portrait"
      />

    <activity
      android:name="name.zeno.android.presenter.activities.IDCardCameraActivity"
      android:launchMode="singleTask"
      android:screenOrientation="landscape"
      />


    <provider
      android:name="androidx.core.content.FileProvider"
      android:authorities="${applicationId}.fileprovider"
      android:exported="false"
      android:grantUriPermissions="true"
      >
      <meta-data
        android:name="android.support.FILE_PROVIDER_PATHS"
        android:resource="@xml/file_paths"
        />
    </provider>
  </application>
</manifest>
