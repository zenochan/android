<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  style="@style/layout.wrap"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  >


  <name.zeno.android.widget.ZTextView
    android:id="@+id/tv_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:drawablePadding="4dp"
    android:drawableTop="@mipmap/ic_camera"
    android:gravity="center"
    android:text="@string/app_name"
    android:textSize="@dimen/md.textCaption"
    />

  <View
    android:id="@+id/view_center_anchor"
    style="@style/center_anchor"
    />

  <android.support.v7.widget.AppCompatTextView
    android:id="@+id/tv_badge"
    android:layout_width="wrap_content"
    android:layout_height="16sp"
    android:layout_marginLeft="16dp"
    android:layout_toRightOf="@+id/view_center_anchor"
    android:background="@drawable/z_bg_badge"
    android:gravity="center"
    android:minWidth="16sp"
    android:padding="1dp"
    android:text="0"
    android:textColor="@color/z.white"
    android:textSize="10sp"
    android:visibility="gone"
    />

</RelativeLayout>