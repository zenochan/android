<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  >

  <name.zeno.android.widget.SimpleActionbar
    style="@style/layout.fullWidth"
    app:preEnable="true"
    app:titleText="输入地址"
    />

  <android.support.v7.widget.AppCompatEditText
    android:id="@+id/tv_keyword"
    style="@style/layout.fullWidth"
    android:layout_marginBottom="16dp"
    android:background="@color/z.white"
    android:hint="输入地址"
    android:padding="16dp"
    android:imeOptions="actionDone"
    android:singleLine="true"
    android:textColor="@color/z.black_a87"
    android:textSize="@dimen/md.textSubhead"
    />

  <android.support.v7.widget.AppCompatButton
    android:id="@+id/btn_input"
    style="@style/button.main"
    android:layout_height="40dp"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:visibility="gone"
    />


  <android.support.v7.widget.RecyclerView
    android:id="@+id/rcv_search_poi"
    style="@style/layout.full"
    />

</LinearLayout>