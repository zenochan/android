<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/z.black"
  android:orientation="vertical"
  >

  <name.zeno.android.camera.IdCardSurfaceView
    android:id="@+id/surface"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />

  <name.zeno.android.camera.PreviewBorderView
    android:id="@+id/preview_border_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />

  <name.zeno.android.widget.ZImageView
    android:id="@+id/iv_take"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_marginRight="16dp"
    android:src="@mipmap/ic_camera"
    app:drawableTint="@color/z.white"
    />

</RelativeLayout>